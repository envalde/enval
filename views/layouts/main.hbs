  <body>
    <div class="e-assistent" onclick="esmartassistent()">
      <i class="lni lni-comments"></i>
    </div>

    <div class="e-assist-window view-e-assist-window" id="e-assist-window">
      <i class="lni lni-close e-smart-close" onclick="esmartassistent()"></i>
